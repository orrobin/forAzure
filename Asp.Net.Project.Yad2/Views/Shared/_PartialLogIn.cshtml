@model SignIn

<div class="col-md-10 offset-md-1">
    <section>
        <form id="account" method="post" asp-controller="User" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SignInPassword"></label>
                <input type="password" asp-for="SignInPassword" class="form-control" />
                <span asp-validation-for="SignInPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
                @if (TempData["LogInError"] as string == "Incorrect")
                {
                    <div class="text-danger">Incorrect Username or Password</div>}
            </div>
        </form>
    </section>
    <a asp-area="" asp-controller="User" asp-action="SignUp">Not a member? Register here!</a>
</div>



